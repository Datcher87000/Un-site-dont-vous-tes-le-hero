{% extends 'base.html.twig' %}

{% block title %}Hero index{% endblock %}

{% block body %}
    <h1>Hero index</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Nom</th>
                <th>Point de vie</th>
                <th>Attaque</th>
                <th>Défense</th>
                <th>Agilité</th>
                <th>Inteligence</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hero in heroes %}
            <tr>

                <td>{{ hero.name }}</td>
                <td>{{ hero.pv }}</td>
                <td>{{ hero.atk }}</td>
                <td>{{ hero.def }}</td>
                <td>{{ hero.agi }}</td>
                <td>{{ hero.intel }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('app_hero_show', {'id': hero.id}) }}">show</a>
                    <a class="btn btn-secondary" href="{{ path('app_hero_edit', {'id': hero.id}) }}">edit</a>
                    <form method="post" action="{{ path('app_hero_delete', {'id': hero.id}) }}" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ hero.id) }}">
                        <button class="btn btn-danger">delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_hero_new') }}">Create new</a>
{% endblock %}

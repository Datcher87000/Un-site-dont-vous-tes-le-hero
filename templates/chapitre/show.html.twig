{% extends 'base.html.twig' %}

{% block title %}Chapitre : {{ chapitre.titre }}{% endblock %}

{% block body %}
    <h1>{{ chapitre.titre }}</h1>
    <p><strong>Description :</strong> {{ chapitre.description }}</p>
    <p><strong>Numéro du chapitre :</strong> {{ chapitre.numChapitre }}</p>

    {% if chapitre.choix|length > 0 %}
        <h2>Choix disponibles :</h2>
        <ul>
            {% for choix in chapitre.choix %}
                <li>
                    <strong>Description :</strong> {{ choix.description }}<br>
                    {% if choix.chapitreCible %}
                        <strong>Chapitre cible :</strong> {{ choix.chapitreCible }}
                    {% else %}
                        <em>Pas de chapitre cible</em>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p><em>Aucun choix disponible pour ce chapitre.</em></p>
    {% endif %}

    <a href="{{ path('app_histoire_show', { id: histoire.id }) }}">Retour à l'histoire</a>
{% endblock %}
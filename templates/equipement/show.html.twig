{% extends 'base.html.twig' %}

{% block title %}Equipement{% endblock %}

{% block body %}
    <h1>Equipement</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Name</th>
                <td>{{ equipement.name }}</td>
            </tr>
            <tr>
                <th>Emplacement</th>
                <td>{{ equipement.emplacement }}</td>
            </tr>
           <tr>
                <th>Bonus/Malus</th>
                <td>
                    <ul>
                    {% for enchantement in equipement.enchantements %}
                      <li>  {{ enchantement.name }}</li>
                    {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
<div class="d-flex flex-row justify-content-center">
    <a class="btn btn-dark m-2" href="{{ path('app_equipement_index') }}">back to list</a>

    <a class="btn btn-secondary m-2" href="{{ path('app_equipement_edit', {'id': equipement.id}) }}">edit</a>

    {{ include('equipement/_delete_form.html.twig') }}
</div>
{% endblock %}
